<% provide(:title, 'All users') %>
<h1>All users</h1>
<div id = "paginate">
  <%= will_paginate %>
</div>
  <ul class= "users" id = "users_ul">
    <% @users.each do |user| %>
      <li id = "all_users_li">
          <div id = "user_image_all"><%= image_tag(user.image_url, height: '32', width: '32', id: 'user_image_') %></div>
          <div id="username_"> <%= link_to user.name, user %> </div>
          <% if (current_user.permissions == 3) && !current_user?(user) %>
              <%= link_to "Delete", user, method: :delete,
                                          data: { confirm: "You sure?" } %>
              <%= link_to "Make Admin", user, method: :make_admin,
                                          data: { confirm: "You sure?" } %>
              <%= link_to "Make Moderator", user, method: :make_moderator,
                                          data: { confirm: "You sure?" } %>
          <% end %>
      </li>
  <%end%>
<div id = "paginate">
  <%= will_paginate %>
</div>
</ul>
