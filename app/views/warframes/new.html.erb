<% provide(:title, 'Add Warframe') %>

<h1 class = "white">Add Warframe</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@warframe) do |w| %>

      <%= w.label :name %>
      <%= w.text_field :name, class: 'form-control_' %>

      <%= w.label :image_url, "Image Url" %>
      <%= w.text_field :image_url, class: 'form-control_' %>

      <%= w.label :whereToGet , "Where To Get"%>
      <%= w.text_area :whereToGet, class: 'form-control_' %>

      <%= w.label :blueprintDropChance, "Blueprint Drop Chance" %>
      <%= w.text_field :blueprintDropChance, class: 'form-control_' %>

      <%= w.label :systemsDropChance, "Systems Drop Chance" %>
      <%= w.text_field :systemsDropChance, class: 'form-control_' %>

      <%= w.label :chassisDropChance, "Chassis Drop Chance" %>
      <%= w.text_field :chassisDropChance, class: 'form-control_' %>

      <%= w.label :neuropticsDropChance, "Neuroptics Drop Chance" %>
      <%= w.text_field :neuropticsDropChance, class: 'form-control_' %>


      <%= w.submit "Add Warframe", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
