<% provide(:title, 'Add Weapon') %>

<h1 class = "white">Add Weapon</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@weapon) do |w| %>

        <%= w.label :weapon_type, "Weapon Type" %>
        <%= w.text_field :weapon_type, class: 'form-control' %>

      <%= w.label :name %>
      <%= w.text_field :name, class: 'form-control' %>

      <%= w.label :image_url, "Image Url" %>
      <%= w.text_field :image_url, class: 'form-control' %>

      <%= w.label :whereToGet , "Where To Get"%>
      <%= w.text_area :whereToGet, class: 'form-control' %>

      <%= w.label :dropChance, "Drop Chance" %>
      <%= w.text_field :dropChance, class: 'form-control' %>

      <%= w.submit "Add Weapon", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
