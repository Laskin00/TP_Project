<div id ="weapon_data">
    <h1 id="weapon-view-header_"> <%= @weapon.name %> </h1>
    <div id="image-and-text">
        <img id="weapon-view-image_" src= <%= @weapon.image_url %>  alt=<%= @weapon.name %> title=<%= @weapon.name %> >

        <div id="weapon-view-wrapper_">
            <div id="weapon-view-stats-div_">
            <h4 class="weapon-view-stats_">Mastery Rank: <%= @weapon.mastery_rank %> </h4>
                <h4 class="weapon-view-stats_">Type: <%= @weapon.attack_type %> </h4>
                <% if @weapon.impact != nil %>
                  <h4 class="weapon-view-stats_">Impact: <%= @weapon.impact %> </h4>
                <% end %>
                <% if @weapon.puncture != nil %>
                  <h4 class="weapon-view-stats_">Puncture: <%= @weapon.puncture %> </h4>
                <% end %>
                <% if @weapon.slash != nil %>
                  <h4 class="weapon-view-stats_">Slash: <%= @weapon.slash %> </h4>
                <% end %>
                <% if @weapon.viral != nil %>
                    <h4 class="weapon-view-stats_">Viral: <%= @weapon.viral %> </h4>
                <% end %>
            </div>
        </div>
    </div>
</div>

<%= form_for(:user, url: current_link + "weapons/" + @weapon.weapon_type.to_s + "/" + @weapon.id.to_s) do |f| %>
  <% if FavoriteWeapon.where(user_id: current_user, weapon_id: @weapon.id).exists? %>
    <div class = 'favorites_button'>
      <%= f.submit "Remove weapon from favorites", class: "btn btn-secoundary" %>
    </div>
  <%else%>
    <div class = 'favorites_button'>
      <%= f.submit "Add weapon to favorites", class: "btn btn-secoundary" %>
    </div>
  <% end %>
<% end %>
