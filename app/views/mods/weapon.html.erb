<table id = "index_table" align = "center">
  <% @weapon.each do |weapon| %>
      <tr id = "index_tr">
          <th id = "index_th"><%= image_tag(weapon.image_url, width: '125' ,height: '181', id: 'mod-image') %><th>
          <th id = "index_th"><h2 class = 'white'><%= link_to weapon.name, weapon %></h2><th>
            <% if logged_in? && current_user.permissions  > 1 %>
              <th id = "index_th"><h2 class = 'white'><%= link_to "â€¢ Delete", weapon, method: :delete, data: { confirm: "You sure?"}%></h2></th>
            <% end %>
      </tr>
  <% end %>
</table>
<% if !logged_in? || current_user.permissions < 1 %>
    <div class="most-viewed small-left ad small">
        <img src="/images/corinth-ad.png" class="image-ad" title="the brand new corinth" alt="the brand new corinth" onclick="location.href='/weapons/primary/Corinth'">
    </div>
    <div class="most-viewed small-right ad small">
        <img src="/images/ember-ad.png" class="image-ad" title="hot singles near you" alt="hot singles near you" onclick="location.href='/warframes/Ember'">
    </div>
<% end %>
